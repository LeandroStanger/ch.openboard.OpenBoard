{
    "id": "ch.openboard.OpenBoard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "openboard",
    "rename-desktop-file": "OpenBoard.desktop",
    "rename-icon": "OpenBoard",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,
    "base": "io.qt.qtwebkit.BaseApp",
    "branch": "stable",

    "modules": [
        {
            "name": "quazip",
            "buildsystem": "qmake",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://github.com/stachenov/quazip/", "tag": "0.7.6" } ]
        },
        {
            "name": "openjpeg",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://github.com/uclouvain/openjpeg", "tag": "v2.3.0"} ]
        },
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                 "-DENABLE_XPDF_HEADERS=ON"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-0.72.0.tar.xz",
                    "sha256": "c1747eb8f26e9e753c4001ed951db2896edc1021b6d0f547a0bd2a27c30ada51"
                }
            ]
        },
        {
            "name": "openboard",
            "buildsystem": "qmake",
            "config-opts": [
                "INCLUDEPATH += /app/include/quazip",
                "INCLUDEPATH += /app/include/QtWebKit",
                "INCLUDEPATH += /app/include/QtWebKitWidgets",
                "INCLUDEPATH += /app/include/poppler",
                "QT -= webkit", "QT -= webkitwidgets",
                "LIBS += -L/app/lib/ -L/usr/lib/ -lQt5WebKit -lQt5WebKitWidgets",
                "INSTALL_ROOT = /",
                "PREFIX = /app/"
            ],
            "build-commands": [
                "install -Dm644 -t /app/share/appdata ${FLATPAK_ID}.appdata.xml"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/openboard-org/openboard",
                    "tag": "v1.5.0",
                    "commit": "ac51989b45e0fb57e3f43f0935529f6d6a4d477d"
                },
                { "type": "patch", "path": "0001-Add-compatibility-with-OpenSSL-1.1.patch" },
                { "type": "patch", "path": "0002-Rewrite-libs.pri.patch" },
                { "type": "patch", "path": "0003-Use-libpoppler-instead-of-raw-xpdf.patch" },
                { "type": "patch", "path": "0004-Don-t-use-QtSingleApplication.patch" },
                { "type": "patch", "path": "0005-Install-to-correct-directories-on-linux.patch" },
                { "type": "patch", "path": "0006-Update-library-names.patch" },
                { "type": "patch", "path": "0007-Use-QStandardPaths-to-locate-resources.patch" },
                { "type": "patch", "path": "0008-Flatpak-Workaround-Don-t-check-for-webkit-as-Qt-modu.patch" },
                { "type": "file", "path": "ch.openboard.OpenBoard.appdata.xml" }
            ]
        }
    ]
}
